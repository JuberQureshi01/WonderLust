<% layout("./layout/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>List Your Hotel</h3>
                <form method="post" action="/listings" class="needs-validation" enctype="multipart/form-data"
                    novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label ">Title:</label>
                        <input type="text" name="listings[title]" placeholder="Add a catchy title" class="form-control"
                            required>
                        <div class="invalid-feedback">Please Enter Your Title</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" name="listings[description]" placeholder="Enter your Description"
                            class="form-control" required></textarea>
                        <div class="invalid-feedback">Please Enter a Short Description</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input type="file" name="listings[image]" class="form-control" required>
                    </div>
                    <div class="mb-3">
                    <label for="category">Select Category</label>
                    <select class="form-select" name="listings[category]" >
                        <option >Mountains</option>
                        <option >Rooms</option>
                        <option >Iconiccities</option>
                        <option >Amazingpools</option>
                        <option >Camping</option>
                        <option >Castels</option>
                        <option >Farming</option>
                        <option >Arctic</option>
                        <option >Domes</option>
                      </select>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="listings[price]" placeholder="1200" class="form-control"
                                required>
                            <div class="invalid-feedback">Enter Your Price</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listings[country]" placeholder="India" class="form-control"
                                required>
                            <div class="invalid-feedback">Country Should Be Valid</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listings[location]" placeholder="Jaipur,Rajasthan" class="form-control"
                            required>
                        <div class="invalid-feedback">Location Should Be Valid</div>
                    </div>
                    <button class=" btn btn-dark mb-2 add-btn mt-3">Add</button>
                </form>
            </div>
        </div>
    </body>