<style>
  .search-btn {
    position: relative;
    background-color: #fe424d;
    color: #fff;
    left: 0vw;
    border-radius: 25px;
    padding: 8px 1rem 9px 1rem;

  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;

  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1rem 0.5rem 1.5rem;
     border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    border:none;
    margin-right: 5px;
  }

  /* Calendar and button styles */
  .calendar-container {
    display: none;
    /* Initially hidden */
    margin-top: 20px;
  }

  .calendar {
    --side-padding: 20px;
    --border-radius: 34px;
    --accent-br: 15px;
    width: 40vw;
  }

  .calendar select {

    background-color: #f3f4f6;
    padding: 4px 38px;
    border-radius: 23px;
  }

  .calendar__opts,
  .calendar__buttons {
    background-color: #fff;
    display: grid;
    grid-template-columns: 1fr 1fr;
    column-gap: 15px;
    padding-bottom: 1vw;
    padding-left: 5vw;
  }

  .calendar__opts {
    border-top-left-radius: var(--border-radius);
    border-top-right-radius: var(--border-radius);
    padding: 20px var(--side-padding);
  }

  .calendar__body {
    background-image: linear-gradient(to bottom, #f3f4f6, #fff);
  }

  .calendar__days {
    background-color: #fff;
    padding: 0 var(--side-padding) 10px;
    display: grid;
    grid-template-columns: repeat(7, 1fr);
  }

  .calendar__days>div {
    text-align: center;
    font-weight: 700;
    font-size: 1.02rem;
    color: #c5c8ca;
  }

  .calendar__dates {
    padding: 10px var(--side-padding);
    display: grid;
    grid-template-columns: repeat(7, 1fr);
  }

  .calendar__date {
    text-align: center;
    font-weight: 600;
    font-size: 1.02rem;
    cursor: pointer;
  }

  /* Style div as buttons */
  .calendar__div-button {
    display: inline-block;
    background-color: #686b73;
    color: #fff;
    padding: 3px 4px;
    border-radius: 20px;
    cursor: pointer;
    text-align: center;
    width: 60%;
  }

  .calendar__div-button--primary {
    background-color: #ff374b;
  }

  .calendar__div-button:hover {
    background-color: #e1e1e3;
    transition: background-color 0.3s ease;
  }

  .selectBtn {
    left: -0.7vw;
    background-color: #ffffff;
    color: #6c6a6a;
    padding: 6px 2px;
    width: 10vw;
    cursor: pointer;
    text-align: center;
    position: relative;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    border-left: 1px solid rgb(214, 210, 210);
    border-right: 1px solid rgb(214, 210, 210);
    margin-left: 0.5vw;
  }

  .searchBtn:hover {
    background-color: #fe424d;
    color: #fe424d;
  }

  .calendar__buttons {
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
  }

  /* Selected date */
  .selected-date {
    background-color: #ff374b;
    /* Red background for selected dates */
    color: white;
    border-radius: 10px;
    /* Border radius updated to 10px */
    padding: 2px 5px;
    font-weight: bold;
    opacity: 1;
    /* Full opacity for selected dates */
    transition: background-color 0.3s ease, opacity 0.3s ease;
  }

  /* Dates in range */
  .in-range {
    background-color: #fe424d;
    /* Light red background for dates in range */
    color: white;
    border-radius: 5px;
    /* Border radius updated to 10px */
    opacity: 1;
    /* Reduced opacity for dates in the range */
  }

  /* All other dates (not selected or in range) */
  .calendar__date {
    opacity: 1;
    /* Reduced opacity for non-selected dates */
    border-radius: 5px;
    /* Border radius set to 10px */
  }

  /* Hover effects for both selected and in-range dates */
  .selected-date:hover,
  .in-range:hover {
    background-color: #d62a3c;
    /* Darker red on hover */
    opacity: 1;
    /* Ensure full opacity when hovering */
  }

  /* Hover effect for normal dates */
  .calendar__date:hover {
    background-color: rgba(0, 0, 0, 0.1);
    /* Slight hover effect for non-selected dates */
    opacity: 0.7;
    /* Slight increase in opacity on hover */
  }
  .Searching{
    margin-left: 16vw;
    border: 1px solid rgb(214, 210, 210);
    padding: 2px 4px;
    border-top-left-radius: 65px;
    border-bottom-left-radius: 65px;
    border-top-right-radius: 65px;
    border-bottom-right-radius: 65px;
}
@media (max-width:600px) {
  .search-btn i{
